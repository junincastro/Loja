<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8">
    <!-- Title here -->
    <!-- Description, Keywords and Author -->
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.MetaDescription" />
    <meta name="keywords" content="@ViewBag.MetaKeywords" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Styles -->
    @Styles.Render("~/css")
    @Styles.Render("~/Content/startmenu")

    <!-- Favicon -->
    <link rel="shortcut icon" href="#">
</head>

<body>






    <!-- Shopping cart Modal -->
    <div class="modal fade" id="shoppingcart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Shopping Cart</h4>
                </div>
                <div class="modal-body">

                    <!-- Items table -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><a href="single-item.html">HTC One</a></td>
                                <td>2</td>
                                <td>$250</td>
                            </tr>
                            <tr>
                                <td><a href="single-item.html">Apple iPhone</a></td>
                                <td>1</td>
                                <td>$502</td>
                            </tr>
                            <tr>
                                <td><a href="single-item.html">Galaxy Note</a></td>
                                <td>4</td>
                                <td>$1303</td>
                            </tr>
                            <tr>
                                <th></th>
                                <th>Total</th>
                                <th>$2405</th>
                            </tr>
                        </tbody>
                    </table>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Continue Shopping</button>
                    <button type="button" class="btn btn-info">Checkout</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- Logo & Navigation starts -->

    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-sm-2">
                    <!-- Logo -->
                    <div class="logo">
                        <h1> @Html.ActionLink("Quiron", "Index") </h1>
                    </div>
                </div>

                <div class="col-md-10 col-sm-10">
                    <div class="kart-links">
                        <a href="Login.html">Seja bem-vindo(a)!  Faça seu login </a>

                        <a href="login.html">Meu cadastro</a>
                        <a href="register.html">Meus pedidos</a>
                        <a data-toggle="modal" href="#shoppingcart"><i class="fa fa-shopping-cart"></i> 3 itens - R$ 300,00</a>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-md-12 col-sm-12">
                    @Html.Partial("_Menu")
                </div>


            </div>
        </div>
    </div>

    <!-- Logo & Navigation ends -->
    <!-- Page title -->
    <div class="page-title">
        <div class="container">
            <h2>
                <i class="fa fa-shopping-cart color"></i> Pensou em esportes, pense Quiron <small>Seu esporte está aqui.</small>
            </h2>


            <hr />
        </div>
    </div>
    <!-- Page title -->
    <!-- Page content -->

    <div class="page-content blocky">
        <div class="container">
            @RenderBody()
        </div>
    </div>








    <!-- Footer starts -->
